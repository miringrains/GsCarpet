{% comment %}
  Collection Header Section
  Displays collection title, description, and optional background image
{% endcomment %}

<div class="collection-header-section">
  <div class="collection-header" 
    {% if section.settings.bg_image or collection.image %}
      style="background-image: url('{{ section.settings.bg_image | default: collection.image | image_url: width: 1920 }}');"
    {% endif %}
  >
    {% if section.settings.bg_image or collection.image %}
      <div class="collection-header__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }}"></div>
    {% endif %}
    
    <div class="container">
      <div class="collection-header__content">
        <h1 class="collection-header__title text-h1">{{ collection.title }}</h1>
        {% if collection.description != blank %}
          <div class="collection-header__description text-body-lg text-secondary">
            {{ collection.description }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% style %}
  #shopify-section-{{ section.id }} {
    --collection-header-min-height: {{ section.settings.min_height }}px;
    --collection-header-min-height-mobile: {{ section.settings.min_height_mobile }}px;
    --collection-header-text-align: {{ section.settings.text_alignment }};
    --collection-header-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    
    {% if section.settings.text_alignment == 'center' %}
      --collection-header-content-margin-left: auto;
      --collection-header-content-margin-right: auto;
    {% elsif section.settings.text_alignment == 'right' %}
      --collection-header-content-margin-left: auto;
      --collection-header-content-margin-right: 0;
    {% else %}
      --collection-header-content-margin-left: 0;
      --collection-header-content-margin-right: 0;
    {% endif %}
  }
{% endstyle %}

{% stylesheet %}
  .collection-header-section {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }
  
  .collection-header {
    position: relative;
    width: 100%;
    padding: var(--space-2xl) 0;
    background-color: #F5F5F3;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    overflow: hidden;
    min-height: var(--collection-header-min-height, 300px);
    display: flex;
    align-items: center;
  }
  
  .collection-header__overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, var(--collection-header-overlay-opacity, 0.4));
    z-index: 1;
  }
  
  .collection-header__content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    text-align: var(--collection-header-text-align, center);
    margin-left: var(--collection-header-content-margin-left);
    margin-right: var(--collection-header-content-margin-right);
  }
  
  .collection-header__title {
    margin-bottom: var(--space-sm);
  }
  
  .collection-header[style*="background-image"] .collection-header__title {
    color: var(--color-text-inverse);
  }
  
  .collection-header[style*="background-image"] .collection-header__description {
    color: rgba(255, 255, 255, 0.9);
  }
  
  .collection-header__description {
    max-width: 600px;
    margin-left: var(--collection-header-content-margin-left);
    margin-right: var(--collection-header-content-margin-right);
  }
  
  @media (max-width: 768px) {
    .collection-header {
      min-height: var(--collection-header-min-height-mobile, 200px);
      padding: var(--space-xl) 0;
    }
    
    .collection-header__content {
      text-align: center;
      margin: 0 auto;
    }
    
    .collection-header__description {
      margin: 0 auto;
    }
    
    .collection-header-section {
      overflow-x: hidden;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Collection Header",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "min_height",
      "min": 200,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "Minimum height",
      "default": 300
    },
    {
      "type": "range",
      "id": "min_height_mobile",
      "min": 150,
      "max": 400,
      "step": 50,
      "unit": "px",
      "label": "Minimum height (mobile)",
      "default": 200
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image",
      "info": "Optional. If not set, will use collection image if available."
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 10,
      "unit": "%",
      "default": 40,
      "label": "Overlay opacity",
      "info": "Controls the darkness of overlay on background image"
    }
  ],
  "presets": [
    {
      "name": "Collection Header"
    }
  ]
}
{% endschema %}

{% comment %}
  Hero Banner Section
  Clean hero with background image and text overlay
{% endcomment %}

<section class="hero-banner">
  <div class="hero-banner__wrapper">
    {% if section.settings.image %}
      <div class="hero-banner__image">
        {% render 'image',
          image: section.settings.image,
          width: 1920,
          height: 1080,
          loading: 'eager',
          fetchpriority: 'high',
          alt: section.settings.heading,
          class: 'hero-banner__bg'
        %}
      </div>
    {% endif %}
    
    <div class="hero-banner__content">
      <div class="container">
        <div class="hero-banner__text">
          {% if section.settings.heading %}
            <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
          {% endif %}
          
          {% if section.settings.subheading %}
            <p class="hero-banner__subheading">{{ section.settings.subheading }}</p>
          {% endif %}
          
          {% if section.settings.button_label %}
            <a href="{{ section.settings.button_link }}" class="btn btn--primary">
              {{ section.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-banner {
    position: relative;
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: #f5f5f5;
  }
  
  .hero-banner__wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .hero-banner__image {
    position: absolute;
    inset: 0;
    z-index: 1;
  }
  
  .hero-banner__bg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero-banner__content {
    position: relative;
    z-index: 2;
    padding: 60px 0;
  }
  
  .hero-banner__text {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }
  
  .hero-banner__heading {
    font-size: 3rem;
    font-weight: 300;
    margin-bottom: 1rem;
    color: white;
    text-shadow: 0 2px 4px rgba(0,0,0,0.2);
  }
  
  .hero-banner__subheading {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    color: white;
    text-shadow: 0 2px 4px rgba(0,0,0,0.2);
  }
  
  @media (max-width: 768px) {
    .hero-banner {
      min-height: 60vh;
    }
    
    .hero-banner__heading {
      font-size: 2rem;
    }
    
    .hero-banner__subheading {
      font-size: 1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section-hero-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover amazing products"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

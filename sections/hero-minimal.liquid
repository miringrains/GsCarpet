{% comment %}
  Minimal Hero Section
  Clean, spacious hero with optional background image or video
{% endcomment %}

<section class="hero-minimal" data-section-id="{{ section.id }}">
  {% if section.settings.background_image %}
    <div class="hero-minimal__background">
      {% render 'image',
        image: section.settings.background_image,
        width: 1920,
        height: 1080,
        loading: 'eager',
        fetchpriority: 'high',
        alt: section.settings.title,
        class: 'hero-minimal__bg-image',
        data-parallax: '0.3'
      %}
      <div class="hero-minimal__overlay"></div>
    </div>
  {% endif %}
  
  <div class="hero-minimal__content">
    <div class="container">
      <div class="hero-minimal__inner">
        {% if section.settings.subtitle %}
          <span class="hero-minimal__subtitle text-sm" data-animate="fade-up">
            {{ section.settings.subtitle }}
          </span>
        {% endif %}
        
        {% if section.settings.title %}
          <h1 class="hero-minimal__title text-display" data-animate="fade-up" data-animate-delay="100">
            {{ section.settings.title }}
          </h1>
        {% endif %}
        
        {% if section.settings.text %}
          <div class="hero-minimal__text text-body-lg text-secondary" data-animate="fade-up" data-animate-delay="200">
            {{ section.settings.text }}
          </div>
        {% endif %}
        
        {% if section.settings.button_text %}
          <div class="hero-minimal__actions" data-animate="fade-up" data-animate-delay="300">
            <a 
              href="{{ section.settings.button_link }}" 
              class="btn btn--primary btn--large"
            >
              {{ section.settings.button_text }}
            </a>
            
            {% if section.settings.secondary_button_text %}
              <a 
                href="{{ section.settings.secondary_button_link }}" 
                class="btn btn--secondary btn--large"
              >
                {{ section.settings.secondary_button_text }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
  
  {% if section.settings.show_scroll_indicator %}
    <div class="hero-minimal__scroll" data-animate="fade-in" data-animate-delay="1000">
      <span class="hero-minimal__scroll-text">Scroll</span>
      <div class="hero-minimal__scroll-line"></div>
    </div>
  {% endif %}
</section>

{% stylesheet %}
  .hero-minimal {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: var(--color-background-subtle);
  }
  
  /* Background */
  .hero-minimal__background {
    position: absolute;
    inset: 0;
    z-index: 1;
  }
  
  .hero-minimal__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero-minimal__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.2) 0%,
      rgba(0, 0, 0, 0.4) 100%
    );
  }
  
  /* Content */
  .hero-minimal__content {
    position: relative;
    z-index: 2;
    width: 100%;
    padding: var(--space-3xl) 0;
  }
  
  .hero-minimal__inner {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }
  
  .hero-minimal__subtitle {
    display: inline-block;
    margin-bottom: var(--space-md);
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-secondary);
  }
  
  .hero-minimal__background + .hero-minimal__content .hero-minimal__subtitle,
  .hero-minimal__background + .hero-minimal__content .hero-minimal__title,
  .hero-minimal__background + .hero-minimal__content .hero-minimal__text {
    color: var(--color-text-inverse);
  }
  
  .hero-minimal__title {
    margin-bottom: var(--space-lg);
    line-height: 1.1;
  }
  
  .hero-minimal__text {
    max-width: 600px;
    margin: 0 auto var(--space-xl);
    font-size: 1.25rem;
    line-height: 1.6;
  }
  
  .hero-minimal__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    justify-content: center;
  }
  
  /* Scroll Indicator */
  .hero-minimal__scroll {
    position: absolute;
    bottom: var(--space-xl);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
    z-index: 2;
  }
  
  .hero-minimal__scroll-text {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-secondary);
  }
  
  .hero-minimal__background + .hero-minimal__content + .hero-minimal__scroll .hero-minimal__scroll-text {
    color: rgba(255, 255, 255, 0.8);
  }
  
  .hero-minimal__scroll-line {
    width: 1px;
    height: 60px;
    background: linear-gradient(
      to bottom,
      var(--color-text-tertiary) 0%,
      transparent 100%
    );
    animation: scroll-line 2s ease-in-out infinite;
  }
  
  .hero-minimal__background + .hero-minimal__content + .hero-minimal__scroll .hero-minimal__scroll-line {
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0.8) 0%,
      transparent 100%
    );
  }
  
  @keyframes scroll-line {
    0%, 100% {
      transform: scaleY(0.5);
      transform-origin: top;
    }
    50% {
      transform: scaleY(1);
      transform-origin: top;
    }
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .hero-minimal {
      min-height: 80vh;
    }
    
    .hero-minimal__content {
      padding: var(--space-2xl) 0;
    }
    
    .hero-minimal__title {
      font-size: clamp(2rem, 6vw, 3rem);
    }
    
    .hero-minimal__text {
      font-size: 1.125rem;
    }
    
    .hero-minimal__actions {
      flex-direction: column;
      width: 100%;
      max-width: 300px;
      margin: 0 auto;
    }
    
    .hero-minimal__actions .btn {
      width: 100%;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero - Minimal",
  "tag": "section",
  "class": "section-hero-minimal",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "Optional. Leave blank for solid background."
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Premium Collection"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Handcrafted Rugs for Modern Living"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Discover our curated collection of premium rugs, crafted with care and designed to transform your space."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary button text",
      "default": "Custom Size"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show scroll indicator",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero - Minimal",
      "category": "Hero"
    }
  ]
}
{% endschema %}

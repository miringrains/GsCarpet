{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --section-bg-color: {{ section.settings.background_color }};
    --section-heading-align: {{ section.settings.heading_alignment }};
    --section-column-align: {{ section.settings.column_alignment }};
    --columns-mobile: {{ section.settings.columns_mobile }};
  }
{%- endstyle -%}

{% comment %}
  Multicolumn Section - Adapted from Dawn
  Perfect for features, team members, benefits, etc.
{% endcomment %}

<section class="multicolumn" id="shopify-section-{{ section.id }}">
  <div class="{% unless section.settings.full_width %}container{% endunless %}">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="multicolumn__header">
        {% if section.settings.subtitle != blank %}
          <span class="multicolumn__subtitle">{{ section.settings.subtitle }}</span>
        {% endif %}
        {% if section.settings.title != blank %}
          <h2 class="multicolumn__title">{{ section.settings.title }}</h2>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="multicolumn__grid multicolumn__grid--{{ section.settings.columns_desktop }}">
      {% for block in section.blocks %}
        <div class="multicolumn__item" {{ block.shopify_attributes }}>
          {% if block.settings.image %}
            <div class="multicolumn__image{% if section.settings.image_ratio == 'circle' %} multicolumn__image--circle{% endif %}">
              {% render 'image',
                image: block.settings.image,
                width: 400,
                height: 400,
                alt: block.settings.title,
                class: 'multicolumn__img{% if section.settings.image_width == 'half' %} multicolumn__img--half{% elsif section.settings.image_width == 'third' %} multicolumn__img--third{% endif %}'
              %}
            </div>
          {% endif %}
          
          <div class="multicolumn__content">
            {% if block.settings.title != blank %}
              <h3 class="multicolumn__item-title">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.text != blank %}
              <div class="multicolumn__item-text rte">
                {{ block.settings.text }}
              </div>
            {% endif %}
            
            {% if block.settings.link_label != blank and block.settings.link %}
              <a href="{{ block.settings.link }}" class="multicolumn__link">
                {{ block.settings.link_label }}
                <svg width="14" height="14" viewBox="0 0 14 14" fill="none">
                  <path d="M5 2L10 7L5 12" stroke="currentColor" stroke-width="1.5"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Multicolumn",
  "tag": "section",
  "class": "section-multicolumn",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Multicolumn"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": false
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "Columns on desktop",
      "options": [
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "4",
          "label": "4"
        }
      ],
      "default": "3"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Columns on mobile",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "1"
    },
    {
      "type": "select",
      "id": "column_alignment",
      "label": "Column alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "image_width",
      "label": "Image width",
      "options": [
        {
          "value": "full",
          "label": "Full width"
        },
        {
          "value": "half",
          "label": "Half width"
        },
        {
          "value": "third",
          "label": "One third"
        }
      ],
      "default": "full"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image shape",
      "options": [
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "circle",
          "label": "Circle"
        }
      ],
      "default": "square"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Column"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Description",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Link label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Multicolumn",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .size-guide {
    padding: var(--space-3xl) 0;
    background-color: #FFFFFF;
  }
  
  .size-guide__header {
    margin-bottom: var(--space-2xl);
    text-align: center;
  }
  
  .size-guide__subtitle {
    margin-bottom: var(--space-sm);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }
  
  .size-guide__title {
    margin-bottom: var(--space-md);
    font-weight: 300;
    letter-spacing: -0.02em;
  }
  
  .size-guide__content {
    background-color: #FFFFFF;
    padding: var(--space-xl);
    border: 1px solid var(--color-border);
  }
  
  .size-guide__tabs {
    display: flex;
    gap: var(--space-xs);
    margin-bottom: var(--space-xl);
    border-bottom: 1px solid var(--color-border);
  }
  
  .size-guide__tab {
    padding: var(--space-sm) var(--space-md);
    font-size: 1rem;
    font-weight: 500;
    background: none;
    border: none;
    border-bottom: 2px solid transparent;
    cursor: pointer;
    transition: var(--transition-base);
    color: var(--color-text-secondary);
  }
  
  .size-guide__tab:hover {
    color: var(--color-text-primary);
  }
  
  .size-guide__tab--active {
    color: var(--color-text-primary);
    border-bottom-color: var(--color-text-primary);
  }
  
  .size-guide__room {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: start;
  }
  
  .size-guide__diagram {
    position: relative;
    background-color: #FFFFFF;
    padding: var(--space-lg);
    border: 1px solid var(--color-border);
  }
  
  .size-guide__room-image {
    width: 100%;
    height: auto;
  }
  
  .size-guide__sizes {
    padding-left: var(--space-lg);
  }
  
  .size-guide__sizes-title {
    font-size: 1.25rem;
    font-weight: 500;
    margin-bottom: var(--space-lg);
  }
  
  .size-guide__size-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
  }
  
  .size-guide__size-item {
    display: grid;
    grid-template-columns: 100px 1fr;
    gap: var(--space-md);
    align-items: baseline;
  }
  
  .size-guide__size {
    font-size: 1rem;
    font-weight: 600;
  }
  
  .size-guide__size-desc {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }
  
  .size-guide__tip {
    padding: var(--space-md);
    background-color: #F5F5F3;
    border-left: 3px solid var(--color-text-primary);
    font-size: 0.875rem;
    line-height: 1.5;
  }
  
  .size-guide__tip strong {
    font-weight: 600;
  }
  
  .size-guide__general-tips {
    margin-top: var(--space-2xl);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
  }
  
  .size-guide__general-tips h3 {
    font-size: 1.25rem;
    font-weight: 500;
    margin-bottom: var(--space-md);
  }
  
  .size-guide__general-tips ul {
    list-style: none;
    padding: 0;
  }
  
  .size-guide__general-tips li {
    position: relative;
    padding-left: var(--space-md);
    margin-bottom: var(--space-sm);
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }
  
  .size-guide__general-tips li::before {
    content: "â€¢";
    position: absolute;
    left: 0;
    color: var(--color-text-primary);
  }
  
  @media (max-width: 1024px) {
    .size-guide__room {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }
    
    .size-guide__sizes {
      padding-left: 0;
    }
  }
  
  @media (max-width: 768px) {
    .size-guide__content {
      padding: var(--space-md);
    }
    
    .size-guide__tabs {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }
    
    .size-guide__tab {
      white-space: nowrap;
      padding: var(--space-xs);
      font-size: 0.875rem;
    }
    
    .size-guide__size-item {
      grid-template-columns: 80px 1fr;
      gap: var(--space-sm);
    }
  }
{% endstylesheet %}

{{ 'section-size-guide.css' | asset_url | stylesheet_tag }}

<section class="size-guide" data-section-id="{{ section.id }}">
  <div class="grid-container">
    <div class="size-guide__header grid-col-{{ section.settings.header_width }}">
      {% if section.settings.subtitle %}
        <p class="size-guide__subtitle text-sm" data-scroll-animate="text">
          {{ section.settings.subtitle }}
        </p>
      {% endif %}
      
      {% if section.settings.title %}
        <h2 class="size-guide__title text-{{ section.settings.title_size }}" data-scroll-animate="text">
          {{ section.settings.title }}
        </h2>
      {% endif %}
    </div>
    
    <div class="size-guide__content grid-col-12" x-data="{ activeRoom: 'living' }">
      <!-- Room Tabs -->
      <div class="size-guide__tabs">
        {% for block in section.blocks %}
          {% if block.type == 'room' %}
            <button 
              class="size-guide__tab" 
              :class="{ 'size-guide__tab--active': activeRoom === '{{ block.id }}' }"
              @click="activeRoom = '{{ block.id }}'"
            >
              {{ block.settings.room_name }}
            </button>
          {% endif %}
        {% endfor %}
      </div>
      
      <!-- Room Content -->
      {% for block in section.blocks %}
        {% if block.type == 'room' %}
          <div 
            class="size-guide__room" 
            x-show="activeRoom === '{{ block.id }}'"
            x-transition
            {{ block.shopify_attributes }}
          >
            <div class="size-guide__diagram">
              {% if block.settings.room_image %}
                {% render 'image',
                  image: block.settings.room_image,
                  width: 800,
                  height: 600,
                  loading: 'lazy',
                  class: 'size-guide__room-image',
                  alt: block.settings.room_name
                %}
              {% endif %}
            </div>
            
            <div class="size-guide__sizes">
              <h3 class="size-guide__sizes-title">Recommended Sizes</h3>
              
              <div class="size-guide__size-list">
                {% if block.settings.size_1 %}
                  <div class="size-guide__size-item">
                    <span class="size-guide__size">{{ block.settings.size_1 }}</span>
                    <span class="size-guide__size-desc">{{ block.settings.size_1_desc }}</span>
                  </div>
                {% endif %}
                
                {% if block.settings.size_2 %}
                  <div class="size-guide__size-item">
                    <span class="size-guide__size">{{ block.settings.size_2 }}</span>
                    <span class="size-guide__size-desc">{{ block.settings.size_2_desc }}</span>
                  </div>
                {% endif %}
                
                {% if block.settings.size_3 %}
                  <div class="size-guide__size-item">
                    <span class="size-guide__size">{{ block.settings.size_3 }}</span>
                    <span class="size-guide__size-desc">{{ block.settings.size_3_desc }}</span>
                  </div>
                {% endif %}
              </div>
              
              {% if block.settings.tip %}
                <p class="size-guide__tip">
                  <strong>Tip:</strong> {{ block.settings.tip }}
                </p>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
      
      <!-- General Tips -->
      {% if section.settings.show_tips %}
        <div class="size-guide__general-tips">
          <h3>General Sizing Guidelines</h3>
          <ul>
            <li>Leave 18-24 inches of floor space on all sides for larger rooms</li>
            <li>In smaller spaces, 8-10 inches of floor space is sufficient</li>
            <li>Front legs of furniture should sit on the rug</li>
            <li>Consider traffic patterns when choosing size</li>
          </ul>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Size Guide",
  "tag": "section",
  "class": "section-size-guide",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Find Your Perfect Fit"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Rug Size Guide"
    },
    {
      "type": "select",
      "id": "title_size",
      "label": "Title Size",
      "options": [
        { "value": "lg", "label": "Large" },
        { "value": "xl", "label": "Extra Large" },
        { "value": "2xl", "label": "Display" }
      ],
      "default": "xl"
    },
    {
      "type": "range",
      "id": "header_width",
      "label": "Header Width",
      "min": 4,
      "max": 12,
      "step": 2,
      "default": 12
    },
    {
      "type": "checkbox",
      "id": "show_tips",
      "label": "Show General Tips",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "room",
      "name": "Room Type",
      "settings": [

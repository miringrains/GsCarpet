{% comment %}
  Image with Text - Adapted from Dawn
  Flexible content section with image and text side by side
{% endcomment %}

<section class="image-with-text section-{{ section.id }}" id="shopify-section-{{ section.id }}">
  <div class="{% unless section.settings.full_width %}container{% endunless %}">
    <div class="image-with-text__grid image-with-text__grid--{{ section.settings.layout }}">
      <div class="image-with-text__media">
        {% if section.settings.image %}
          {% render 'image',
            image: section.settings.image,
            width: 720,
            height: section.settings.image_height,
            alt: section.settings.heading,
            class: 'image-with-text__img',
            loading: 'lazy'
          %}
        {% else %}
          <div class="image-with-text__placeholder">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>
      
      <div class="image-with-text__content">
        <div class="image-with-text__inner">
          {% if section.settings.subtitle %}
            <span class="image-with-text__subtitle">{{ section.settings.subtitle }}</span>
          {% endif %}
          
          {% if section.settings.heading %}
            <h2 class="image-with-text__heading {{ section.settings.heading_size }}">
              {{ section.settings.heading }}
            </h2>
          {% endif %}
          
          {% if section.settings.text %}
            <div class="image-with-text__text rte">
              {{ section.settings.text }}
            </div>
          {% endif %}
          
          {% if section.settings.button_label %}
            <a 
              href="{{ section.settings.button_link }}" 
              class="btn btn--{{ section.settings.button_style }}"
            >
              {{ section.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
  
  .image-with-text__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }
  
  .image-with-text__grid--image-right {
    direction: rtl;
  }
  
  .image-with-text__grid--image-right > * {
    direction: ltr;
  }
  
  .image-with-text__media {
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.image_radius }}px;
  }
  
  .image-with-text__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .image-with-text__placeholder {
    aspect-ratio: 1;
    background: var(--color-background-subtle);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .image-with-text__placeholder svg {
    width: 40%;
    height: 40%;
    opacity: 0.3;
  }
  
  .image-with-text__inner {
    max-width: 500px;
  }
  
  .image-with-text__subtitle {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-secondary);
    margin-bottom: 0.75rem;
  }
  
  .image-with-text__heading {
    margin: 0 0 1.5rem;
  }
  
  .image-with-text__heading.h1 {
    font-size: 2.5rem;
    font-weight: 300;
  }
  
  .image-with-text__heading.h2 {
    font-size: 2rem;
    font-weight: 400;
  }
  
  .image-with-text__heading.h3 {
    font-size: 1.5rem;
    font-weight: 500;
  }
  
  .image-with-text__text {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
  }
  
  @media (max-width: 768px) {
    .image-with-text__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .image-with-text__grid--image-right {
      direction: ltr;
    }
    
    .image-with-text__heading.h1 {
      font-size: 2rem;
    }
    
    .image-with-text__heading.h2 {
      font-size: 1.5rem;
    }
    
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top | times: 0.75 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Image with Text",
  "tag": "section",
  "class": "section-image-with-text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_height",
      "label": "Image height",
      "options": [
        {
          "value": "480",
          "label": "Small"
        },
        {
          "value": "640",
          "label": "Medium"
        },
        {
          "value": "720",
          "label": "Large"
        }
      ],
      "default": "640"
    },
    {
      "type": "range",
      "id": "image_radius",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Image border radius",
      "default": 8
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Image placement",
      "options": [
        {
          "value": "image-left",
          "label": "Image left"
        },
        {
          "value": "image-right",
          "label": "Image right"
        }
      ],
      "default": "image-left"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Image with text"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        {
          "value": "h3",
          "label": "Small"
        },
        {
          "value": "h2",
          "label": "Medium"
        },
        {
          "value": "h1",
          "label": "Large"
        }
      ],
      "default": "h2"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        }
      ],
      "default": "primary"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": false
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Image with Text"
    }
  ]
}
{% endschema %}

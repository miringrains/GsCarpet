{{ 'section-hero-refined.css' | asset_url | stylesheet_tag }}

<section class="hero-refined" data-section-id="{{ section.id }}">
  <div class="hero-refined__container">
    {% if section.settings.image %}
      <div class="hero-refined__media" data-parallax="0.1">
        {% render 'image',
          image: section.settings.image,
          width: 1920,
          height: 1080,
          loading: 'eager',
          fetchpriority: 'high',
          class: 'hero-refined__image',
          alt: section.settings.heading | default: shop.name
        %}
      </div>
    {% endif %}
    
    <div class="grid-container hero-refined__grid">
      <div class="hero-refined__content grid-col-{{ section.settings.content_width }}" style="grid-column-start: {{ section.settings.content_position }}">
        <div class="hero-text" data-scroll-animate>
          {% if section.settings.subtitle %}
            <p class="hero-refined__subtitle text-sm">{{ section.settings.subtitle }}</p>
          {% endif %}
          
          {% if section.settings.heading %}
            <h1 class="hero-refined__heading text-{{ section.settings.heading_size }}">
              {{ section.settings.heading }}
            </h1>
          {% endif %}
          
          {% if section.settings.subheading %}
            <p class="hero-refined__subheading text-lg">{{ section.settings.subheading }}</p>
          {% endif %}
          
          {% if section.settings.button_label %}
            <div class="hero-refined__actions">
              <a href="{{ section.settings.button_link }}" class="btn-refined btn-refined--primary">
                {{ section.settings.button_label }}
              </a>
              
              {% if section.settings.button_2_label %}
                <a href="{{ section.settings.button_2_link }}" class="btn-refined btn-refined--secondary">
                  {{ section.settings.button_2_label }}
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Refined",
  "tag": "section",
  "class": "section-hero-refined",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image",
      "info": "1920 x 1080px recommended"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Premium Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Handcrafted Rugs for Modern Living"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our curated collection of premium rugs, designed to transform your space."
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "content_width",
      "label": "Content Width",
      "options": [
        { "value": "4", "label": "Narrow (4 columns)" },
        { "value": "6", "label": "Medium (6 columns)" },
        { "value": "8", "label": "Wide (8 columns)" }
      ],
      "default": "6"
    },
    {
      "type": "range",
      "id": "content_position",
      "label": "Content Position",
      "min": 1,
      "max": 8,
      "step": 1,
      "default": 2,
      "info": "Column to start content (1-8)"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "options": [
        { "value": "xl", "label": "Large" },
        { "value": "2xl", "label": "Extra Large" },
        { "value": "display", "label": "Display" }
      ],
      "default": "2xl"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Section Height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "default": 80
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_2_label",
      "label": "Second Button Label"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Second Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Refined",
      "category": "Image"
    }
  ]
}
{% endschema %}

<style>
  #shopify-section-{{ section.id }} {
    --hero-height: {{ section.settings.height }}vh;
  }
</style>

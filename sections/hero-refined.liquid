<section class="hero-refined" data-section-id="{{ section.id }}">
  <div class="hero-refined__container">
    {% if section.settings.image %}
      <div class="hero-refined__media" data-parallax="0.1">
        {% render 'image',
          image: section.settings.image,
          width: 1920,
          height: 1080,
          loading: 'eager',
          fetchpriority: 'high',
          class: 'hero-refined__image',
          alt: section.settings.heading | default: shop.name
        %}
      </div>
    {% endif %}
    
    <div class="grid-container hero-refined__grid">
      <div class="hero-refined__content grid-col-{{ section.settings.content_width }}" style="grid-column-start: {{ section.settings.content_position }}">
        <div class="hero-text" data-scroll-animate>
          {% if section.settings.subtitle %}
            <p class="hero-refined__subtitle text-sm">{{ section.settings.subtitle }}</p>
          {% endif %}
          
          {% if section.settings.heading %}
            <h1 class="hero-refined__heading text-{{ section.settings.heading_size }}">
              {{ section.settings.heading }}
            </h1>
          {% endif %}
          
          {% if section.settings.subheading %}
            <p class="hero-refined__subheading text-lg">{{ section.settings.subheading }}</p>
          {% endif %}
          
          {% if section.settings.button_label %}
            <div class="hero-refined__actions">
              <a href="{{ section.settings.button_link }}" class="btn-refined btn-refined--primary">
                {{ section.settings.button_label }}
              </a>
              
              {% if section.settings.button_2_label %}
                <a href="{{ section.settings.button_2_link }}" class="btn-refined btn-refined--secondary">
                  {{ section.settings.button_2_label }}
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Refined",
  "tag": "section",
  "class": "section-hero-refined",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image",
      "info": "1920 x 1080px recommended"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Premium Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Handcrafted Rugs for Modern Living"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our curated collection of premium rugs, designed to transform your space."
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "content_width",
      "label": "Content Width",
      "options": [
        { "value": "4", "label": "Narrow (4 columns)" },
        { "value": "6", "label": "Medium (6 columns)" },
        { "value": "8", "label": "Wide (8 columns)" }
      ],
      "default": "6"
    },
    {
      "type": "range",
      "id": "content_position",
      "label": "Content Position",
      "min": 1,
      "max": 8,
      "step": 1,
      "default": 2,
      "info": "Column to start content (1-8)"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "options": [
        { "value": "xl", "label": "Large" },
        { "value": "2xl", "label": "Extra Large" },
        { "value": "display", "label": "Display" }
      ],
      "default": "2xl"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Section Height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "default": 80
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_2_label",
      "label": "Second Button Label"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Second Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Refined",
      "category": "Image"
    }
  ]
  }
{% endschema %}

{% style %}
  #shopify-section-{{ section.id }} {
    --hero-height: {{ section.settings.height }}vh;
  }
{% endstyle %}

{% stylesheet %}
  .hero-refined {
    position: relative;
    min-height: var(--hero-height, 80vh);
    overflow: hidden;
    background-color: #FFFFFF;
  }
  
  .hero-refined__container {
    position: relative;
    width: 100%;
    height: var(--hero-height, 80vh);
    display: flex;
    align-items: center;
  }
  
  .hero-refined__media {
    position: absolute;
    inset: 0;
    z-index: 1;
  }
  
  .hero-refined__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero-refined__grid {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    align-items: center;
  }
  
  .hero-refined__content {
    padding-top: var(--space-xl);
    padding-bottom: var(--space-xl);
  }
  
  .hero-refined:has(.hero-refined__media) .hero-refined__content {
    background-color: #FFFFFF;
    padding: var(--space-lg);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-xl);
  }
  
  .hero-refined__subtitle {
    margin-bottom: var(--space-sm);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }
  
  .hero-refined__heading {
    margin-bottom: var(--space-md);
    font-weight: 300;
    letter-spacing: -0.02em;
    line-height: 1.1;
  }
  
  .hero-refined__subheading {
    margin-bottom: var(--space-xl);
    color: var(--color-text-secondary);
    max-width: 45ch;
  }
  
  .hero-refined__actions {
    display: flex;
    gap: var(--space-md);
    align-items: center;
    flex-wrap: wrap;
  }
  
  .btn-refined {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0 var(--space-xl);
    height: 48px;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: none;
    border: 1px solid var(--color-text-primary);
    background-color: transparent;
    color: var(--color-text-primary);
    transition: var(--transition-base);
    cursor: pointer;
  }
  
  .btn-refined--primary {
    background-color: var(--color-text-primary);
    color: #FFFFFF;
  }
  
  .btn-refined--primary:hover {
    background-color: transparent;
    color: var(--color-text-primary);
  }
  
  .btn-refined--secondary {
    background-color: transparent;
    color: var(--color-text-primary);
  }
  
  .btn-refined--secondary:hover {
    background-color: var(--color-text-primary);
    color: #FFFFFF;
  }
  
  @media (max-width: 1024px) {
    .hero-refined__content {
      grid-column: span 8 !important;
      grid-column-start: 2 !important;
    }
  }
  
  @media (max-width: 768px) {
    .hero-refined {
      min-height: 70vh;
    }
    
    .hero-refined__container {
      height: 70vh;
    }
    
    .hero-refined__content {
      grid-column: span 12 !important;
      grid-column-start: 1 !important;
    }
    
    .hero-refined__actions {
      flex-direction: column;
      width: 100%;
    }
    
    .btn-refined {
      width: 100%;
    }
  }
{% endstylesheet %}

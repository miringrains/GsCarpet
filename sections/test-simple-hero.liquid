{% comment %}
  Test Simple Hero - Minimal working hero
{% endcomment %}

<div style="padding: 100px 20px; text-align: center; background: #f0f0f0;">
  <h1>{{ section.settings.title | default: 'Test Hero' }}</h1>
  <p>{{ section.settings.subtitle | default: 'If you can see this, sections are working' }}</p>
</div>

{% schema %}
{
  "name": "Test Simple Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Simple Hero Test"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "This is a working hero section"
    }
  ],
  "presets": [
    {
      "name": "Test Simple Hero",
      "category": "Test"
    }
  ]
}
{% endschema %}

{{ 'section-testimonials.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --section-bg-color: {{ section.settings.background_color }};
    --testimonials-columns: {{ section.settings.columns }};
  }
{%- endstyle -%}

{% comment %}
  Testimonials Section - Custom design based on best practices
  Clean testimonial carousel/grid
{% endcomment %}

<section class="testimonials" id="shopify-section-{{ section.id }}">
  <div class="container">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="testimonials__header">
        {% if section.settings.subtitle != blank %}
          <span class="testimonials__subtitle">{{ section.settings.subtitle }}</span>
        {% endif %}
        {% if section.settings.title != blank %}
          <h2 class="testimonials__title">{{ section.settings.title }}</h2>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="testimonials__wrapper testimonials__wrapper--{{ section.settings.layout }}">
      <div class="testimonials__grid">
        {% for block in section.blocks %}
          <div class="testimonial" {{ block.shopify_attributes }}>
            <div class="testimonial__content">
              {% if block.settings.stars > 0 %}
                <div class="testimonial__stars">
                  {% for i in (1..5) %}
                    <svg width="18" height="18" viewBox="0 0 18 18" fill="{% if i <= block.settings.stars %}currentColor{% else %}none{% endif %}" stroke="currentColor">
                      <path d="M9 1.5L11.25 6.75L17 7.5L13 11.25L14 17L9 14.25L4 17L5 11.25L1 7.5L6.75 6.75L9 1.5Z" stroke-width="1.5" stroke-linejoin="round"/>
                    </svg>
                  {% endfor %}
                </div>
              {% endif %}
              
              <blockquote class="testimonial__quote">
                "{{ block.settings.quote }}"
              </blockquote>
              
              <div class="testimonial__author">
                {% if block.settings.author_image %}
                  <div class="testimonial__avatar">
                    {% render 'image',
                      image: block.settings.author_image,
                      width: 60,
                      height: 60,
                      crop: 'center',
                      alt: block.settings.author,
                      class: 'testimonial__avatar-img'
                    %}
                  </div>
                {% endif %}
                
                <div class="testimonial__author-info">
                  <cite class="testimonial__author-name">{{ block.settings.author }}</cite>
                  {% if block.settings.author_title != blank %}
                    <span class="testimonial__author-title">{{ block.settings.author_title }}</span>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      
      {% if section.settings.layout == 'carousel' and section.blocks.size > 1 %}
        <div class="testimonials__controls">
          <button class="testimonials__arrow testimonials__arrow--prev" aria-label="Previous testimonial">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2"/>
            </svg>
          </button>
          <button class="testimonials__arrow testimonials__arrow--next" aria-label="Next testimonial">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M9 6L15 12L9 18" stroke="currentColor" stroke-width="2"/>
            </svg>
          </button>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% if section.settings.layout == 'carousel' %}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.querySelector('#shopify-section-{{ section.id }} .testimonials__grid');
    const prevBtn = document.querySelector('#shopify-section-{{ section.id }} .testimonials__arrow--prev');
    const nextBtn = document.querySelector('#shopify-section-{{ section.id }} .testimonials__arrow--next');
    let currentIndex = 0;
    const totalSlides = {{ section.blocks.size }};
    
    function updateCarousel() {
      carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
    }
    
    prevBtn?.addEventListener('click', () => {
      currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
      updateCarousel();
    });
    
    nextBtn?.addEventListener('click', () => {
      currentIndex = (currentIndex + 1) % totalSlides;
      updateCarousel();
    });
  });
</script>
{% endif %}

{% schema %}
{
  "name": "Testimonials",
  "tag": "section",
  "class": "section-testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "What Our Customers Say"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Reviews"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "grid",
          "label": "Grid"
        },
        {
          "value": "carousel",
          "label": "Carousel"
        }
      ],
      "default": "carousel"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns (grid layout)",
      "options": [
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        }
      ],
      "default": "3",
      "info": "Only applies when layout is set to Grid"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#F8F8F8"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "Add customer reviews and testimonials to showcase your store's happy customers."
        },
        {
          "type": "range",
          "id": "stars",
          "min": 0,
          "max": 5,
          "step": 1,
          "label": "Star rating",
          "default": 5
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author name",
          "default": "Author's name"
        },
        {
          "type": "text",
          "id": "author_title",
          "label": "Author title",
          "default": "Customer"
        },
        {
          "type": "image_picker",
          "id": "author_image",
          "label": "Author image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}

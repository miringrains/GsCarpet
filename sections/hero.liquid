{% comment %}
  Hero Section - Main customizable hero
  Last updated: 2024-10-19
  Version: 2.0
{% endcomment %}

<section class="hero-perfect" id="shopify-section-{{ section.id }}">
  {% if section.settings.background_image %}
    <div class="hero-perfect__background">
      {% render 'image',
        image: section.settings.background_image,
        width: 1920,
        height: 1080,
        loading: 'eager',
        fetchpriority: 'high',
        alt: section.settings.title,
        class: 'hero-perfect__bg-image'
      %}
      {% if section.settings.enable_overlay %}
        <div class="hero-perfect__overlay"></div>
      {% endif %}
    </div>
  {% endif %}
  
  <div class="hero-perfect__content">
    <div class="container">
      <div class="hero-perfect__inner">
        {% if section.settings.subtitle %}
          <span class="hero-perfect__subtitle">
            {{ section.settings.subtitle }}
          </span>
        {% endif %}
        
        {% if section.settings.title %}
          <h1 class="hero-perfect__title">
            {{ section.settings.title }}
          </h1>
        {% endif %}
        
        {% if section.settings.text %}
          <div class="hero-perfect__text">
            {{ section.settings.text }}
          </div>
        {% endif %}
        
        {% if section.settings.button_text %}
          <div class="hero-perfect__actions">
            <a 
              href="{{ section.settings.button_link }}" 
              class="btn btn--primary btn--large"
              {% if section.settings.button_style == 'outline' %}
                style="background: transparent; border: 2px solid currentColor;"
              {% endif %}
            >
              {{ section.settings.button_text }}
            </a>
            
            {% if section.settings.secondary_button_text %}
              <a 
                href="{{ section.settings.secondary_button_link }}" 
                class="btn btn--secondary btn--large"
              >
                {{ section.settings.secondary_button_text }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
  
  {% if section.settings.show_scroll_indicator %}
    <div class="hero-perfect__scroll">
      <span class="hero-perfect__scroll-text">{{ section.settings.scroll_text }}</span>
      <div class="hero-perfect__scroll-line"></div>
    </div>
  {% endif %}
</section>

<style>
  #shopify-section-{{ section.id }} {
    /* Dynamic Height */
    --hero-height: {{ section.settings.height }}vh;
    --hero-height-mobile: {{ section.settings.height_mobile }}vh;
    
    /* Border Radius */
    --hero-border-radius: {{ section.settings.border_radius }}px;
    
    /* Overlay */
    --hero-overlay-color: {{ section.settings.overlay_color }};
    --hero-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    
    /* Content Alignment */
    --hero-text-align: {{ section.settings.text_alignment }};
    --hero-content-vertical: {{ section.settings.vertical_alignment }};
    
    /* Spacing */
    --hero-padding-top: {{ section.settings.padding_top }}px;
    --hero-padding-bottom: {{ section.settings.padding_bottom }}px;
    
    /* Typography */
    --hero-title-size: {{ section.settings.title_size }}rem;
    --hero-title-size-mobile: {{ section.settings.title_size | times: 0.7 }}rem;
    --hero-subtitle-size: {{ section.settings.subtitle_size }}rem;
    --hero-text-size: {{ section.settings.text_size }}rem;
    
    /* Colors */
    {% if section.settings.custom_colors %}
      --hero-bg-color: {{ section.settings.bg_color }};
      --hero-text-color: {{ section.settings.text_color }};
      --hero-title-color: {{ section.settings.title_color | default: section.settings.text_color }};
      --hero-subtitle-color: {{ section.settings.subtitle_color | default: section.settings.text_color }};
    {% else %}
      --hero-bg-color: var(--color-background);
      --hero-text-color: var(--color-text-primary);
      --hero-title-color: var(--color-text-primary);
      --hero-subtitle-color: var(--color-text-secondary);
    {% endif %}
  }
  
  .hero-perfect {
    position: relative;
    min-height: var(--hero-height);
    display: flex;
    align-items: var(--hero-content-vertical);
    justify-content: center;
    overflow: hidden;
    background-color: var(--hero-bg-color);
    {% if section.settings.contained %}
      max-width: var(--container-max-width);
      margin: 0 auto;
      border-radius: var(--hero-border-radius);
    {% endif %}
  }
  
  /* Background */
  .hero-perfect__background {
    position: absolute;
    inset: 0;
    z-index: 1;
  }
  
  .hero-perfect__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    {% if section.settings.contained %}
      border-radius: var(--hero-border-radius);
    {% endif %}
  }
  
  .hero-perfect__overlay {
    position: absolute;
    inset: 0;
    background-color: var(--hero-overlay-color);
    opacity: var(--hero-overlay-opacity);
    {% if section.settings.gradient_overlay %}
      background: linear-gradient(
        180deg,
        transparent 0%,
        var(--hero-overlay-color) 100%
      );
    {% endif %}
  }
  
  /* Content */
  .hero-perfect__content {
    position: relative;
    z-index: 2;
    width: 100%;
    padding: var(--hero-padding-top) 0 var(--hero-padding-bottom);
  }
  
  .hero-perfect__inner {
    max-width: {{ section.settings.content_width }}px;
    margin: 0 auto;
    text-align: var(--hero-text-align);
  }
  
  .hero-perfect__subtitle {
    display: inline-block;
    margin-bottom: var(--space-sm);
    font-size: var(--hero-subtitle-size);
    font-weight: {{ section.settings.subtitle_weight }};
    letter-spacing: {{ section.settings.subtitle_letter_spacing }}em;
    {% if section.settings.subtitle_uppercase %}
      text-transform: uppercase;
    {% endif %}
    color: var(--hero-subtitle-color);
    {% if section.settings.background_image %}
      color: var(--color-text-inverse);
    {% endif %}
  }
  
  .hero-perfect__title {
    margin-bottom: var(--space-md);
    font-size: var(--hero-title-size);
    font-weight: {{ section.settings.title_weight }};
    line-height: {{ section.settings.title_line_height }};
    letter-spacing: {{ section.settings.title_letter_spacing }}em;
    color: var(--hero-title-color);
    {% if section.settings.background_image %}
      color: var(--color-text-inverse);
    {% endif %}
  }
  
  .hero-perfect__text {
    max-width: {{ section.settings.text_max_width }}px;
    margin: 0 auto var(--space-lg);
    font-size: var(--hero-text-size);
    line-height: 1.6;
    color: var(--hero-text-color);
    {% if section.settings.background_image %}
      color: var(--color-text-inverse);
    {% endif %}
    
    {% if section.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% elsif section.settings.text_alignment == 'right' %}
      margin-left: auto;
    {% endif %}
  }
  
  .hero-perfect__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    justify-content: {{ section.settings.text_alignment }};
  }
  
  /* Scroll Indicator */
  .hero-perfect__scroll {
    position: absolute;
    bottom: var(--space-lg);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
    z-index: 2;
  }
  
  .hero-perfect__scroll-text {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--hero-text-color);
    {% if section.settings.background_image %}
      color: rgba(255, 255, 255, 0.8);
    {% endif %}
  }
  
  .hero-perfect__scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(
      to bottom,
      var(--hero-text-color) 0%,
      transparent 100%
    );
    animation: scroll-line 2s ease-in-out infinite;
  }
  
  {% if section.settings.background_image %}
    .hero-perfect__scroll-line {
      background: linear-gradient(
        to bottom,
        rgba(255, 255, 255, 0.8) 0%,
        transparent 100%
      );
    }
  {% endif %}
  
  @keyframes scroll-line {
    0%, 100% {
      transform: scaleY(0.5);
      transform-origin: top;
    }
    50% {
      transform: scaleY(1);
      transform-origin: top;
    }
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .hero-perfect {
      min-height: var(--hero-height-mobile);
    }
    
    .hero-perfect__title {
      font-size: var(--hero-title-size-mobile);
    }
    
    .hero-perfect__actions {
      flex-direction: column;
      width: 100%;
      max-width: 300px;
      margin: 0 auto;
    }
    
    .hero-perfect__actions .btn {
      width: 100%;
    }
  }
</style>

{% schema %}

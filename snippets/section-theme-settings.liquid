{% comment %}
  Section Theme Settings Schema
  Include this in any section's schema to add theme color options
  
  Usage in section schema:
  {% render 'section-theme-settings' %}
{% endcomment %}

{
  "type": "header",
  "content": "Theme & Colors"
},
{
  "type": "select",
  "id": "color_scheme",
  "label": "Color scheme",
  "options": [
    {
      "value": "default",
      "label": "Default (inherit from theme)"
    },
    {
      "value": "light",
      "label": "Light"
    },
    {
      "value": "dark",
      "label": "Dark"
    },
    {
      "value": "accent",
      "label": "Accent"
    },
    {
      "value": "custom",
      "label": "Custom"
    }
  ],
  "default": "default"
},
{
  "type": "paragraph",
  "content": "Custom color settings below only apply when 'Custom' is selected above."
},
{
  "type": "color",
  "id": "bg_color",
  "label": "Background color",
  "default": "#FFFFFF"
},
{
  "type": "color_background",
  "id": "bg_gradient",
  "label": "Background gradient"
},
{
  "type": "color",
  "id": "text_color",
  "label": "Text color",
  "default": "#2B2C25"
},
{
  "type": "color",
  "id": "heading_color",
  "label": "Heading color",
  "info": "Leave blank to use text color"
},
{
  "type": "color",
  "id": "subheading_color",
  "label": "Subheading color",
  "info": "Leave blank to use text color"
},
{
  "type": "header",
  "content": "Accent & Buttons"
},
{
  "type": "color",
  "id": "accent_color",
  "label": "Accent color",
  "default": "#2B2C25"
},
{
  "type": "color",
  "id": "accent_hover_color",
  "label": "Accent hover color",
  "default": "#3E3A37"
},
{
  "type": "color",
  "id": "button_bg_color",
  "label": "Button background",
  "info": "Leave blank to use accent color"
},
{
  "type": "color",
  "id": "button_text_color",
  "label": "Button text color",
  "default": "#FFFFFF"
},
{
  "type": "color",
  "id": "button_hover_bg",
  "label": "Button hover background",
  "info": "Leave blank to use accent hover color"
},
{
  "type": "color",
  "id": "button_hover_text",
  "label": "Button hover text",
  "info": "Leave blank to use button text color"
},
{
  "type": "header",
  "content": "Borders & Cards"
},
{
  "type": "color",
  "id": "border_color",
  "label": "Border color",
  "default": "rgba(62, 58, 55, 0.15)"
},
{
  "type": "color",
  "id": "border_hover_color",
  "label": "Border hover color",
  "default": "rgba(62, 58, 55, 0.25)"
},
{
  "type": "color",
  "id": "card_bg_color",
  "label": "Card background",
  "default": "#FFFFFF"
},
{
  "type": "color",
  "id": "card_text_color",
  "label": "Card text color",
  "info": "Leave blank to use section text color"
},
{
  "type": "color",
  "id": "card_border_color",
  "label": "Card border color",
  "info": "Leave blank to use border color"
},
{
  "type": "header",
  "content": "Overlay"
},
{
  "type": "color",
  "id": "overlay_color",
  "label": "Overlay color",
  "default": "rgba(0, 0, 0, 0.5)"
},
{
  "type": "range",
  "id": "overlay_opacity",
  "min": 0,
  "max": 100,
  "step": 10,
  "unit": "%",
  "label": "Overlay opacity",
  "default": 50
}

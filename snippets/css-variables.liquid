{% style %}
  {% # Loads all font variantions with display: swap %}
  {{ settings.type_primary_font | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  
  {% if settings.type_display_font %}
    {{ settings.type_display_font | font_face: font_display: 'swap' }}
  {% endif %}

  :root {
    /* Typography */
    --font-primary--family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
    --font-primary--style: {{ settings.type_primary_font.style }};
    --font-primary--weight: {{ settings.type_primary_font.weight }};
    {% if settings.type_display_font %}
      --font-display--family: {{ settings.type_display_font.family }}, {{ settings.type_display_font.fallback_families }};
      --font-display--weight: {{ settings.type_display_font.weight }};
    {% else %}
      --font-display--family: var(--font-primary--family);
      --font-display--weight: 700;
    {% endif %}
    
    /* Layout */
    --page-width: {{ settings.max_page_width }};
    --page-margin: {{ settings.min_page_margin }}px;
    --page-margin-mobile: 16px;
    
  /* Restoration Hardware Minimal Color Palette */
  --color-surface: #FFFFFF;
  --color-background: #FFFFFF;
  --color-background-subtle: #FAFAFA;
  --color-foreground: #000000;
  
  /* Text Colors - Refined */
  --color-text-primary: #000000;
  --color-text-secondary: #666666;
  --color-text-tertiary: #999999;
  --color-text-muted: #B8B8B8;
  --color-text-inverse: #FFFFFF;
  
  /* Accent Colors - Extremely Subtle */
  --color-accent: #2C2C2C;
  --color-accent-hover: #000000;
  --color-accent-light: rgba(0, 0, 0, 0.06);
  --color-success: #52C41A;
  --color-error: #FF4D4F;
    
    /* Borders */
    --color-border: rgba(0, 0, 0, 0.06);
    --color-border-medium: rgba(0, 0, 0, 0.12);
    --color-border-dark: rgba(0, 0, 0, 0.24);
    
    /* Shadows - Premium, subtle depth */
    --shadow-xs: 0 1px 3px rgba(0, 0, 0, 0.03);
    --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.04);
    --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.08);
    --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.12);
    --shadow-xl: 0 16px 48px rgba(0, 0, 0, 0.16);
    --shadow-hover: 0 8px 24px rgba(0, 0, 0, 0.10);
    
    /* Premium Spacing Scale */
    --space-xs: 0.5rem;   /* 8px */
    --space-sm: 1rem;     /* 16px */
    --space-md: 2rem;     /* 32px */
    --space-lg: 3rem;     /* 48px */
    --space-xl: 4rem;     /* 64px */
    --space-2xl: 6rem;    /* 96px */
    --space-3xl: 8rem;    /* 128px */
    
    /* Border Radius */
    --radius-sm: 4px;
    --radius-md: 8px;
    --radius-lg: 12px;
    --radius-xl: 16px;
    --radius-full: 9999px;
    --style-border-radius-inputs: {{ settings.input_corner_radius }}px;
    
    /* Transitions - Smooth & Natural */
    --transition-base: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-slow: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-smooth: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    --transition-spring: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    
    /* Z-Index Scale */
    --z-dropdown: 100;
    --z-sticky: 200;
    --z-fixed: 300;
    --z-modal-backdrop: 400;
    --z-modal: 500;
    --z-popover: 600;
    --z-tooltip: 700;
    
    /* Breakpoints */
    --breakpoint-xs: 375px;
    --breakpoint-sm: 640px;
    --breakpoint-md: 768px;
    --breakpoint-lg: 1024px;
    --breakpoint-xl: 1280px;
    --breakpoint-2xl: 1536px;
  }
  
  /* Dark Mode Variables (if enabled) */
  @media (prefers-color-scheme: dark) {
    :root {
      {% if settings.enable_dark_mode %}
        --color-surface: #1A1A1A;
        --color-background: #0F0F0F;
        --color-background-subtle: #1F1F1F;
        --color-foreground: #FFFFFF;
        --color-text-primary: #FFFFFF;
        --color-text-secondary: #A0A0A0;
        --color-text-tertiary: #707070;
        --color-border: rgba(255, 255, 255, 0.12);
      {% endif %}
    }
  }
{% endstyle %}

{% comment %}
  Section Theme Styles
  Generates CSS variables for section-specific color themes
  
  Parameters:
  - section: The section object with theme settings
  - selector: CSS selector for the section (default: section ID)
{% endcomment %}

{% assign selector = selector | default: '#shopify-section-' | append: section.id %}

<style>
  {{ selector }} {
    /* Background Colors */
    --section-bg-color: {{ section.settings.bg_color | default: settings.background_color | default: '#FFFFFF' }};
    --section-bg-gradient: {{ section.settings.bg_gradient | default: 'none' }};
    
    /* Text Colors */
    --section-text-color: {{ section.settings.text_color | default: settings.foreground_color | default: '#2B2C25' }};
    --section-heading-color: {{ section.settings.heading_color | default: section.settings.text_color | default: settings.foreground_color | default: '#2B2C25' }};
    --section-subheading-color: {{ section.settings.subheading_color | default: section.settings.text_color | default: settings.foreground_color | default: '#3E3A37' }};
    
    /* Accent Colors */
    --section-accent-color: {{ section.settings.accent_color | default: settings.accent_color | default: '#2B2C25' }};
    --section-accent-hover: {{ section.settings.accent_hover_color | default: settings.accent_color_hover | default: '#3E3A37' }};
    
    /* Button Colors */
    --section-button-bg: {{ section.settings.button_bg_color | default: section.settings.accent_color | default: settings.accent_color | default: '#2B2C25' }};
    --section-button-text: {{ section.settings.button_text_color | default: '#FFFFFF' }};
    --section-button-hover-bg: {{ section.settings.button_hover_bg | default: section.settings.accent_hover_color | default: settings.accent_color_hover | default: '#3E3A37' }};
    --section-button-hover-text: {{ section.settings.button_hover_text | default: section.settings.button_text_color | default: '#FFFFFF' }};
    
    /* Border Colors */
    --section-border-color: {{ section.settings.border_color | default: 'rgba(62, 58, 55, 0.15)' }};
    --section-border-hover: {{ section.settings.border_hover_color | default: 'rgba(62, 58, 55, 0.25)' }};
    
    /* Overlay Colors */
    --section-overlay-color: {{ section.settings.overlay_color | default: 'rgba(0, 0, 0, 0.5)' }};
    --section-overlay-opacity: {{ section.settings.overlay_opacity | default: 50 | divided_by: 100.0 }};
    
    /* Card Colors */
    --section-card-bg: {{ section.settings.card_bg_color | default: '#FFFFFF' }};
    --section-card-text: {{ section.settings.card_text_color | default: section.settings.text_color | default: settings.foreground_color | default: '#2B2C25' }};
    --section-card-border: {{ section.settings.card_border_color | default: section.settings.border_color | default: 'rgba(62, 58, 55, 0.15)' }};
    
    /* Apply base styles */
    background-color: var(--section-bg-color);
    {% if section.settings.bg_gradient != blank and section.settings.bg_gradient != 'none' %}
      background: {{ section.settings.bg_gradient }};
    {% endif %}
    color: var(--section-text-color);
  }
  
  /* Typography within section */
  {{ selector }} h1,
  {{ selector }} h2,
  {{ selector }} h3,
  {{ selector }} h4,
  {{ selector }} h5,
  {{ selector }} h6,
  {{ selector }} .h1,
  {{ selector }} .h2,
  {{ selector }} .h3,
  {{ selector }} .h4,
  {{ selector }} .h5,
  {{ selector }} .h6 {
    color: var(--section-heading-color);
  }
  
  {{ selector }} .subtitle,
  {{ selector }} .subheading {
    color: var(--section-subheading-color);
  }
  
  /* Links within section */
  {{ selector }} a {
    color: var(--section-accent-color);
  }
  
  {{ selector }} a:hover {
    color: var(--section-accent-hover);
  }
  
  /* Buttons within section */
  {{ selector }} .btn,
  {{ selector }} button[type="submit"] {
    background-color: var(--section-button-bg);
    color: var(--section-button-text);
    border-color: var(--section-button-bg);
  }
  
  {{ selector }} .btn:hover,
  {{ selector }} button[type="submit"]:hover {
    background-color: var(--section-button-hover-bg);
    color: var(--section-button-hover-text);
    border-color: var(--section-button-hover-bg);
  }
  
  {{ selector }} .btn--secondary {
    background-color: transparent;
    color: var(--section-button-bg);
    border-color: var(--section-button-bg);
  }
  
  {{ selector }} .btn--secondary:hover {
    background-color: var(--section-button-bg);
    color: var(--section-button-text);
  }
  
  /* Cards within section */
  {{ selector }} .card {
    background-color: var(--section-card-bg);
    color: var(--section-card-text);
    border-color: var(--section-card-border);
  }
  
  /* Borders */
  {{ selector }} .border,
  {{ selector }} [class*="border-"] {
    border-color: var(--section-border-color);
  }
  
  {{ selector }} .border:hover,
  {{ selector }} [class*="border-"]:hover {
    border-color: var(--section-border-hover);
  }
  
  /* Overlays */
  {{ selector }} .overlay,
  {{ selector }} [class*="overlay"] {
    background-color: var(--section-overlay-color);
    opacity: var(--section-overlay-opacity);
  }
</style>

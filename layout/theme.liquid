<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    
    {% # Design System Foundation - Load in correct order %}
    {{ 'grid-system.css' | asset_url | stylesheet_tag }}
    {{ 'design-tokens.css' | asset_url | stylesheet_tag }}
    
    {% # Load theme base styles %}
    {{ 'theme-base.css' | asset_url | stylesheet_tag }}
    
    {% # Load Restoration Hardware style theme %}
    {{ 'restoration-hardware-theme.css' | asset_url | stylesheet_tag }}
    
    {% # Mobile UX improvements %}
    {{ 'mobile-improvements.css' | asset_url | stylesheet_tag }}
    
    {% # Unified Animation System %}
    {{ 'unified-animations.css' | asset_url | stylesheet_tag }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
  </head>

  <body class="preload">
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
    
    {% # JavaScript files %}
    {{ 'alpine-collapse.min.js' | asset_url | script_tag }}
    {{ 'alpine.min.js' | asset_url | script_tag }}
    {{ 'alpine-animations.js' | asset_url | script_tag }}
    
    <!-- Lottie Player for animated logo -->
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    
    <script>
      // Global helper functions
      window.formatMoney = function(cents) {
        return `$${(cents / 100).toFixed(2)}`;
      };
      
      // Initialize Alpine.js stores and components
      document.addEventListener('alpine:init', () => {
        // Cart store
        Alpine.store('cart', {
          isOpen: false,
          updating: false,
          items: {{ cart.items | json }},
          itemCount: {{ cart.item_count | default: 0 }},
          total_price: {{ cart.total_price | default: 0 }},
          
          openDrawer() {
            this.isOpen = true;
            document.body.style.overflow = 'hidden';
          },
          
          closeDrawer() {
            this.isOpen = false;
            document.body.style.overflow = '';
          },
          
          open() {
            this.openDrawer();
          },
          
          close() {
            this.closeDrawer();
          },
          
          updateCart(cart) {
            this.items = cart.items || [];
            this.itemCount = cart.item_count || 0;
            this.total_price = cart.total_price || 0;
          }
        });
        
        // Quick view store
        Alpine.store('quickView', {
          isOpen: false,
          productHandle: null,

          show(productHandle) {
            this.productHandle = productHandle;
            this.isOpen = true;
            document.body.style.overflow = 'hidden';
          },

          close() {
            this.isOpen = false;
            document.body.style.overflow = '';
            setTimeout(() => {
              this.productHandle = null;
            }, 300);
          }
        });

        // Cart drawer component
        Alpine.data('cartDrawer', () => ({
          updating: false,
          error: null,
          
          formatMoney(cents) {
            return window.formatMoney(cents);
          },
          
          async updateQuantity(key, quantity) {
            if (quantity < 1) quantity = 1;
            this.updating = true;
            this.error = null;
            
            try {
              const response = await fetch('/cart/change.js', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: key, quantity: parseInt(quantity) })
              });
              
              if (!response.ok) {
                throw new Error('Failed to update cart. Please try again.');
              }
              
              const cart = await response.json();
              
              if (cart.errors && Object.keys(cart.errors).length > 0) {
                const errorMessages = Object.values(cart.errors).flat();
                throw new Error(errorMessages.join('. ') || 'Unable to update cart item.');
              }
              
              this.$store.cart.updateCart(cart);
            } catch (error) {
              console.error('Error updating quantity:', error);
              this.error = error.message || 'Unable to update cart. Please try again.';
              // Auto-hide error after 5 seconds
              setTimeout(() => {
                this.error = null;
              }, 5000);
            } finally {
              this.updating = false;
            }
          },
          
          async removeItem(key) {
            await this.updateQuantity(key, 0);
          },
          
          checkout() {
            if (this.$store.cart.items.length === 0) return;
            window.location.href = '/checkout';
          }
        }));

        // Quick view modal component
        Alpine.data('quickViewModal', () => ({
          product: null,
          selectedVariant: null,
          loading: false,
          selectedImageIndex: 0,

          async init() {
            this.$watch('$store.quickView.isOpen', async (open) => {
              if (open && this.$store.quickView.productHandle) {
                await this.loadProduct(this.$store.quickView.productHandle);
              } else if (!open) {
                this.product = null;
                this.selectedImageIndex = 0;
              }
            });
          },

          async loadProduct(productHandle) {
            this.loading = true;
            try {
              const response = await fetch(`/products/${productHandle}.js`);
              const productData = await response.json();
              
              this.product = {
                id: productData.id,
                title: productData.title,
                handle: productData.handle,
                price: productData.price,
                compare_at_price: productData.compare_at_price,
                description: productData.description,
                featured_image: productData.featured_image,
                images: productData.images || [],
                url: productData.url,
                available: productData.available,
                variants: productData.variants || [],
                material: productData.tags?.find(tag => tag.includes('Material:'))?.replace('Material:', '').trim() || null
              };
              
              this.selectedVariant = this.product.variants?.[0];
            } catch (error) {
              console.error('Error loading product:', error);
              this.$store.quickView.close();
            } finally {
              this.loading = false;
            }
          },

          selectVariant(variantId) {
            this.selectedVariant = this.product.variants.find(v => v.id === variantId);
          },

          async addToCart() {
            if (!this.selectedVariant) return;

            try {
              await fetch('/cart/add.js', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  id: this.selectedVariant.id,
                  quantity: 1
                })
              });
              
              window.location.reload();
            } catch (error) {
              console.error('Error adding to cart:', error);
            }
          }
        }));

        // Product content component
        Alpine.data('productContent', () => ({
          selectedVariant: null,
          quantity: 1,
          currentImageIndex: 0,

          init() {
            if (window.productData && window.productData.variants.length > 0) {
              this.selectedVariant = window.productData.variants[0];
            }
          },

          selectVariant(variantId) {
            this.selectedVariant = window.productData.variants.find(v => v.id === variantId);
          },

          updateQuantity(change) {
            this.quantity = Math.max(1, this.quantity + change);
          },

          async addToCart() {
            if (!this.selectedVariant) return;

            try {
              await fetch('/cart/add.js', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  id: this.selectedVariant.id,
                  quantity: this.quantity
                })
              });
              
              Alpine.store('cart').openDrawer();
            } catch (error) {
              console.error('Error adding to cart:', error);
            }
          }
        }));
      });
    </script>
    <script src="{{ 'custom-calculator.js' | asset_url }}" defer></script>
    
    <!-- Remove preload class after load to enable animations -->
    <script>
      window.addEventListener('load', () => {
        document.body.classList.remove('preload');
      });
    </script>
    
    {% # Quick View Modal %}
    {% render 'quick-view-modal' %}
    
    {% # Cart Drawer %}
    {% render 'cart-drawer' %}
  </body>
</html>
